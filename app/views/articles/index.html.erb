<h1>Список статей</h1>
 
<table>
  <tr>
    <th>Заголовок</th>
    <th>Текст</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Посмотреть', article_path(article) %></td>
      <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Новая статья', new_article_path %>

