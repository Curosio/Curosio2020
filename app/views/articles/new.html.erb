
<h1>New Article</h1>


<%= form_with url: articles_path do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
  <% logger.debug "Person attributes hash: #{@form}" %>
<% end %>